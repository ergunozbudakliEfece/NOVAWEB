                                                        <img src="/assets/img/avatars/@resim" alt="Avatar" class="rounded-circle">
                                                    </li>
                                                }

                                            </ul>
                                        </td>
                                    </tr>

                                </tbody>
                            </table>

                        </div>

                    </div>
