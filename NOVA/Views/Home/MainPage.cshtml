@{
    Layout = "/Views/Shared/_Layout_anasayfa.cshtml";
}

@model NOVA.Models.Mail

<!DOCTYPE html>

<html lang="tr"
      class="light-style layout-menu-fixed"
      dir="ltr"
      data-theme="theme-default"
      data-assets-path="../assets/"
