                <script>
                    var stoks = [];
                    var grupkodlari = [];
                    var grupisimleri = [];
                    $(document).ready(function () {

                        
                        // PAGE IS FULLY LOADED
                        // FADE OUT YOUR OVERLAYING DIV
                        $.getJSON('http://192.168.2.13:83/api/stok', function (data) {
                            stoks = data;
                            
                            
                            $('#select1').select2();
                            $('#maxRows').select2();
                            for (let i = 0; i < data.length; i++) {
                                if (!grupkodlari.includes(data[i].GRUP_KODU)) {
                                    grupkodlari.push(data[i].GRUP_KODU);
                                    grupisimleri.push(data[i].GRUP_ISIM);
                                }
                                var tr = document.createElement("tr");
                                
                                var td = document.createElement("td");
                                var lab = document.createElement("label");

                                td.appendChild(lab);
                                td.className = "border-bottom-1 border-info";
                                td.style = "background-color:white;position:sticky;left:0;width:120px;";
                                td.rowSpan = 2;

                                lab.innerHTML = data[i].STOK_ADI;
                                lab.style = "width:120px;font-size:12px;font-weight:bold";
                                tr.appendChild(td);
                                var td1 = document.createElement("td");
                                var lab1 = document.createElement("label");
                                if (data[i].SAT_HZR_ADET <= 0) {
                                    lab1.style = "background-color: transparent;border: none;color:red;float: right; width:70px;text-align: end";
                                } else {
                                    lab1.style = "background-color: transparent;border: none;color:green;float: right; width:70px;text-align: end";
                                }
                                td1.appendChild(lab1);
                                td1.className = "border-bottom-1 border-gray";
                                td1.style = "height:50px;width:70px;";
                                lab1.innerHTML = (data[i].SAT_HZR_ADET).toLocaleString('tr-TR');
                                tr.appendChild(td1);
                                var td2 = document.createElement("td");
                                var lab2 = document.createElement("label");
                                if (data[i].BEKLEYEN_SIPARIS <= 0) {
                                    lab2.style = "background-color: transparent;border: none;color:red;float: right; width:70px;text-align: end";
                                } else {
                                    lab2.style = "background-color: transparent;border: none;color:green;float: right; width:70px;text-align: end";
                                }
                                td2.appendChild(lab2);
                                td2.className = "border-bottom-1 border-gray";
                                td2.style = "height:50px;width:70px;";
                                lab2.innerHTML = (data[i].BEKLEYEN_SIPARIS).toLocaleString('tr-TR');
                                tr.appendChild(td2);
                                var td3 = document.createElement("td");
                                var lab3 = document.createElement("label");
                                if (data[i].BAKIYE <= 0) {
