<script type="text/javascript">

    var IsTogglable = true;

    Toggle(localStorage.getItem("sidebar") === "true");

    $(document).ready(() => {
        SetActiveMenuItem();
    });

    function ExpandSidebar() {
        $('#nova-sidebar').css('width', '250px');

        $('.fadable').css('opacity', '1');

        $('.logo .square').css('padding-left', '1.15rem');
        $('.logo .square').css('height', '45px');

        $('.logo .text').css('height', '45px');
        $('.logo .text').css('opacity', '1');

        $('.brand').css('padding-left', '4.5rem');

        $('.user .profile .photo').css('height', '45px');
        $('.user .profile .photo').css('width', '45px');

        if ($('.active-item').first().parent().hasClass("expandable")) {
            ToggleInnerMenu($('.active-item').first().parent());
        }
    }

    function CollapseSidebar() {
        $('.expandable').find('.inner-menu').stop();

        $('#nova-sidebar').css('width', '50px');

        $('.fadable').css('opacity', '0');

        $('.logo .square').css('padding-left', '0');
        $('.logo .square').css('height', '30px');

        $('.logo .text').css('height', '0');
        $('.logo .text').css('opacity', '0');

        $('.brand').css('padding-left', '0.55rem');

        $('.user .profile .photo').css('height', '35px');
        $('.user .profile .photo').css('width', '35px');

        CloseAllInnerMenu();
    }

    function ToggleSidebar() {
        if (IsTogglable)
        {
            var SidebarIsToggle = localStorage.getItem("sidebar") === "true";

            Toggle(!SidebarIsToggle);

            localStorage.setItem('sidebar', !SidebarIsToggle);
        }
    }
    var calendarInstance1=null;
    function Toggle(SidebarIsToggle) {
        if (IsTogglable) {
            IsTogglable = false;

            if (SidebarIsToggle) {

                var SidebarMiniCSS = {
                    "opacity": '0.5',
                    "height": '30px',
                    "width": '30px',
                    "padding": '0',
                    "border-right": 'none'
                }

                var LogoMiniCSS = {
                    "height": '30px',
                    "padding-left": '0',
                }

                $('#nova-sidebar').unbind('mouseenter mouseleave');

                $('#nova-sidebar').stop().css(SidebarMiniCSS);
                $('.logo').stop().css(LogoMiniCSS);
                $('.logo .square').stop().css(LogoMiniCSS);

                setTimeout(() => {
                    IsTogglable = true;
                }, 250);
                if (calendarInstance1 != null) {
                    calendarInstance1.turnOnFullScreen()
                }
            }
            else {
               
                var SidebarCSS = {
                    "opacity": '1',
                    "height": '100svh',
                    "width": '50px',
                    "padding": '0.25rem 0 0.5rem 0',
                    "border-right": '1px solid #d7d7d7'
                }

                var LogoCSS = {
                    "height": '80px',
                    "padding-left": '0.6rem',
                }

                $('#nova-sidebar').stop().css(SidebarCSS);
                $('.logo').stop().css(LogoCSS);


                if ($('#nova-sidebar:hover').length != 0) {
                    ExpandSidebar();

                    if ($('.active-item').first().parent().hasClass("expandable")) {
                        ToggleInnerMenu($('.active-item').first().parent());
                    }
                }

                setTimeout(() => {
                    $('#nova-sidebar').hover(ExpandSidebar, CollapseSidebar);

                    if ($('#nova-sidebar:hover').length == 0) {
                        CollapseSidebar();
                    }

                    IsTogglable = true;
                }, 250);
                if (calendarInstance1!=null) {
                    calendarInstance1.turnOffFullScreen()
                }
            }
            
        }
    }

    function SetActiveMenuItem() {
        var Path = window.location.pathname;

        if ($(`#nova-sidebar a[href='${Path}']`).parent().parent().hasClass("expandable")) {
            $(`#nova-sidebar a[href='${Path}']`).find('.module').addClass('active-item');
            $(`#nova-sidebar a[href='${Path}']`).parent().parent().find('.module').first().addClass('active-item')
        }
        else {
            $(`#nova-sidebar a[href='${Path}']`).addClass('active-item');
        }
    }


    function ToggleInnerMenu(Item) {
        $('.expandable').not(Item).find('.bxs-chevron-left').removeClass('chevron-down');

        $('.expandable').not(Item).find('.inner-menu').slideUp('fast');

        Item.find('.bxs-chevron-left').toggleClass('chevron-down');

        Item.find('.inner-menu').slideToggle('fast');
    }

    function CloseAllInnerMenu() {
        $('.expandable').find('.bxs-chevron-left').removeClass('chevron-down');

        $('.expandable').find('.inner-menu').slideUp('fast');
    }

    $('.expandable').on('click', function () {
        ToggleInnerMenu($(this));
    });

    function ShowExit() {
        document.body.style.overflow = 'hidden';
        document.activeElement.blur();
        $('#exit').fadeIn('fast').css('display', 'flex');
    }
    function HideExit() {
        document.body.style.overflow = 'auto';
        $('#exit').fadeOut('slow');
    }
</script>