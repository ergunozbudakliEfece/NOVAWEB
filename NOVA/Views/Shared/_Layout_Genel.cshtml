        //Progress
        function ShowProgress() {
            document.body.style.overflow = 'hidden';
            document.activeElement.blur();
            $('#progress-overlay').fadeIn('fast').css('display', 'flex');
        }

        function HideProgress() {
            document.body.style.overflow = 'auto';
            $('#progress-overlay').fadeOut('fast');
        }

        //ToggleMenu
        function ToggleMenu() {
            ExpandMenu();
        }

        $('#menu-overlay').on('click', () => {
            CollapseMenu();
        });

        //Profile Context Menu
        var ProfileContextMenuShowed = false;

        $('.header .profile .information .photo').on('click', () => {
            $('.header .profile .information .photo .context-menu').toggle('fast');
            ProfileContextMenuShowed = !ProfileContextMenuShowed;
        });

        $(document).click(function (e) {
            if ($(e.target).parents(".header .profile").length === 0 && ProfileContextMenuShowed) {
                $('.header .profile .information .photo .context-menu').toggle('fast');
                ProfileContextMenuShowed = !ProfileContextMenuShowed;
            }
        });

        //Logout
        function ToggleLogoutModal(State = 'open')
        {
            switch (State) {
                case 'open':
                    CollapseMenu();
                    document.activeElement.blur();
                    document.body.style.overflow = 'hidden';
                    $('#logout-overlay').fadeIn('fast').css('display', 'flex');
                    break;
                case 'close':
                    document.body.style.overflow = 'auto';
                    $('#logout-overlay').fadeOut('fast');
                    break;
            }
        }
    </script>

