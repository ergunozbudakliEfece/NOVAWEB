    <script>
        MobileOrWeb();

        window.onresize = () => { MobileOrWeb(); };

        function MobileOrWeb() {

            CollapseMenu();

            if (UserAgentMobileCheck() || window.innerWidth < 770) {

                $('.side-menu').unbind('mouseenter mouseleave');

                $('.header .toggle-menu i').show();
                $('body').css('padding-left', '0');
                $('.side-menu').css('width', '0');

                $('#navbar').hide();
            }
            else {
                $('.side-menu').bind('mouseenter', ExpandMenu).bind('mouseleave', CollapseMenu);

                $('.header .toggle-menu i').hide();
                $('body').css('padding-left', '60px');
                $('.side-menu').css('width', '60px');

                $('#navbar').show();
            }
        }

