<style>
    a {
        text-decoration: none;
        cursor: pointer;
    }

    .side-menu a {
        color: var(--text-color);
        line-height: 2rem;
    }

        .side-menu a:hover {
            color: #203289;
            font-weight: bold;
        }

    .active-item {
        color: #203289 !important;
        background-color: rgba(105, 108, 255, 0.16) !important;
        border-radius: 0.375rem;
    }

    .side-menu {
        width: 0;
        overflow-x: hidden;
        position: fixed;
        left: 0;
        top: 0;
        bottom: 0;
        background-color: var(--container-color);
        z-index: 4500;
        transition: width 0.3s;
    }

        .side-menu::-webkit-scrollbar {
            width: 0;
            background: transparent;
        }

    .app-logo {
        height: 75px;
        display: flex;
        justify-content: start;
        align-items: center;
        padding-left: 0.9rem;
        padding-top: 1rem;
        margin-bottom: 2rem;
    }

        .app-logo .square {
            height: 30px;
            width: auto;
            margin-right: 0.5rem;
            transition: 0.3s;
        }

        .app-logo .text {
            height: 30px;
            width: auto;
            opacity: 0;
            transition: 0.3s;
        }

    .app-logo-hover {
        height: 50px !important;
        opacity: 1 !important;
    }


    .menu-item{
        width: 250px;
        padding: 0 1.05rem;
        margin-bottom: 1rem;
    }

        .menu-item .module{
            display:flex;
            justify-content:space-between;
            align-items:center;
            cursor: pointer;
            padding: 0 0.2rem;
        }

            .menu-item .module:hover {
                color: #203289 !important;
                background-color: rgb(88 85 94 / 7%) !important;
                border-radius: 0.375rem;
            }

            .menu-item .module .name {
                display: flex;
                justify-content: start;
                align-items: center;
                width: 100%;
            }

                .menu-item .module .name i {
                    font-size: 14pt;
                    margin-right: 0.5rem;
                }

                .menu-item .module .name span {
                    font-size: var(--small-font-size);
                    font-weight: var(--font-medium);
                    white-space: nowrap;
                }
        .menu-item .fade-item {
            opacity: 0;
            transition: opacity 0.3s;
        }

    .side-menu .menu-item .inner-menu {
        display: none;
        flex-direction: column;
        justify-content: center;
        align-items: start;
        gap: 0.4rem;
        padding-left: 0.45rem;
        margin-bottom: 1rem;
        font-size: 11pt;
        word-break: normal;
    }
        .side-menu .menu-item .inner-menu .inner-menu-item {
            color: #203289;
            cursor: pointer;
            font-size: var(--smaller-font-size);
            font-weight: var(--font-medium);
            color: var(--text-color);
            width: 100%;
            line-height: 1.5rem;
        }
            .side-menu .menu-item .inner-menu .inner-menu-item:hover {
                color: #203289;
                background-color: rgb(88 85 94 / 7%);
                border-radius: 0.375rem;
                cursor: pointer;
            }

    .side-menu .menu-item .module .inner-arrow {
        transition: transform 0.3s;
        font-size: x-large;
    }

    .inner-arrow-rotated {
        -webkit-transform: rotate(-90deg); /* Chrome, Safari 3.1+ */
        -moz-transform: rotate(-90deg); /* Firefox 3.5-15 */
        -ms-transform: rotate(-90deg); /* IE 9 */
        -o-transform: rotate(-90deg); /* Opera 10.50-12.00 */
        transform: rotate(-90deg); /* Firefox 16+, IE 10+, Opera 12.10+ */
    }
</style>



