<script>
    SetActiveItem();

    function ExpandMenu()
    {
        $('.side-menu').css('width', '250px');
        $('.side-menu').css('border-right', '1px solid #e2dee7');
        $('.side-menu').addClass('shadow-lg');

        $('.app-logo .square').addClass('app-logo-hover');
        $('.app-logo .text').addClass('app-logo-hover');

        $('.menu-item .fade-item').css('opacity', '1');

        if (UserAgentMobileCheck() || window.innerWidth < 770)
        {
            document.activeElement.blur();
            document.body.style.overflow = 'hidden';
            $('#menu-overlay').fadeIn('fast');
        }
    }

    function CollapseMenu()
    {
        document.body.style.overflow = 'auto';

        $('.side-menu').css('width', UserAgentMobileCheck() || (window.innerWidth < 770) ? '0' : '60px');
        $('.side-menu').css('border-right', 'none');
        $('.side-menu').removeClass('shadow-lg');

        $('.app-logo .square').removeClass('app-logo-hover');
        $('.app-logo .text').removeClass('app-logo-hover');

        $('#menu-overlay').fadeOut('fast');

        $('.inner-arrow').removeClass('inner-arrow-rotated');
        $('.inner-menu').removeClass('d-flex');

        $('.menu-item .fade-item').css('opacity', '0');
    }

    $('.side-menu .expandable').on('click', function () {
        $(this).find('.inner-arrow').toggleClass('inner-arrow-rotated');
        $(this).parent().find('.inner-menu').toggleClass('d-flex');
    });

    function SetActiveItem()
    {
        var Path = window.location.pathname;

        $(`.side-menu a[href='${Path}']`).addClass('active-item');
    }
</script>