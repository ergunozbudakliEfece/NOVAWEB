<script type="text/javascript">
    function ToggleInnerMenu(Item) {
        $('.expandable').not(Item).find('.bxs-chevron-left').removeClass('chevron-down');

        $('.expandable').not(Item).find('.inner-menu').slideUp('fast');

        Item.find('.bxs-chevron-left').toggleClass('chevron-down');

        Item.find('.inner-menu').slideToggle('fast');
    }

    function CloseAllInnerMenu() {
        $('.expandable').find('.bxs-chevron-left').removeClass('chevron-down');

        $('.expandable').find('.inner-menu').slideUp('fast');
    }

    function SetActiveMenuItem() {
        var Path = window.location.pathname;

        if ($(`#nova-sidebar a[href='${Path}']`).parent().parent().hasClass("expandable")) {
            $(`#nova-sidebar a[href='${Path}']`).find('.module').addClass('active-item');
            $(`#nova-sidebar a[href='${Path}']`).parent().parent().find('.module').first().addClass('active-item')
        }
        else {
            $(`#nova-sidebar a[href='${Path}']`).addClass('active-item');
        }
    }

    $('.expandable').on('click', function () {
        ToggleInnerMenu($(this));
    });

    $('#nova-sidebar')
        .hover(
            function () {
                if ($('.active-item').first().parent().hasClass("expandable")) {
                    ToggleInnerMenu($('.active-item').first().parent());
                }
            },
            function () {
                CloseAllInnerMenu();
            }
        );

    SetActiveMenuItem();

    var SidebarIsToggle = false;

    function SidebarToggle() {
        if (SidebarIsToggle) {
            $('#nova-sidebar').css('width', '50px');
            $('#nova-sidebar').css('pointer-events', 'all');
            $('body').css('padding-left', '50px');
        }
        else {
            $('#nova-sidebar').css('width', '0');
            $('#nova-sidebar').css('pointer-events', 'none');
            $('body').css('padding-left', '0');
        }

        SidebarIsToggle = !SidebarIsToggle;
    }
</script>