<style>
    :root {
        --hover-color: #4249800c;
    }

    #nova-sidebar {
        width: 50px;
        height: 100svh;
        background-color: white;
        overflow: hidden;
        box-sizing: border-box;
        box-shadow: 0 0 10px #00000016;
        transition: all 0.3s ease-in-out;
        position: fixed;
        top: 0;
        left: 0;
        bottom: 0;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        gap: 0.5rem;
        padding: 0.25rem 0 0.5rem 0;
        z-index: 99;
        border-right: 1px solid #d7d7d7;
    }

        #nova-sidebar:hover {
            width: 250px !important;
        }

        #nova-sidebar a {
            text-decoration: none !important;
        }

    .fadable {
        opacity: 0;
        transition: all 0.3s ease-in-out;
    }

    #nova-sidebar:hover .fadable {
        opacity: 1;
    }

    #nova-sidebar .logo {
        width: 250px;
        height: 80px;
        padding-left: 0.6rem;
        display: flex;
        align-items: center;
        gap: 0.25rem;
        transition: all 0.3s ease-in-out;
    }

        #nova-sidebar .logo .square {
            height: 30px;
            transition: all 0.23s ease-in-out;
            cursor: pointer;
        }

        #nova-sidebar .logo .text {
            height: 0;
            opacity: 0;
            transition: all 0.3s ease-in-out;
        }

    #nova-sidebar:hover .logo .square {
        padding-left: 1.15rem;
    }

    #nova-sidebar:hover .logo .square {
        height: 45px !important;
    }

    #nova-sidebar:hover .logo .text {
        height: 45px;
        opacity: 1;
    }

    .brand {
        width: 250px;
        display: flex;
        align-items: center;
        gap: 0.25rem;
        padding-left: 0.55rem;
        transition: all 0.3s ease-in-out;
    }

        .brand .brand-logo {
            height: 30px;
            width: auto;
            padding: 0;
            transition: all 0.3s ease-in-out;
        }

    #nova-sidebar:hover .brand {
        padding-left: 4.5rem;
    }

    #nova-sidebar .user {
        width: 250px;
        height: 80px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        #nova-sidebar .user .profile {
            width: 70%;
            height: 100%;
            display: flex;
            align-items: center;
            flex-direction: row;
            padding: 0 0.45rem;
            gap: 0.35rem;
            transition: all 0.3s ease-in-out;
        }

        #nova-sidebar .user .logout {
            height: 100%;
            width: 30%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            font-size: xx-large;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
        }

            #nova-sidebar .user .logout .text {
                font-size: small;
            }

        #nova-sidebar .user .profile .photo {
            object-fit: cover;
            height: 35px;
            width: 35px;
            border-radius: 50%;
            transition: all 0.3s ease-in-out;
        }

    #nova-sidebar:hover .user .profile .photo {
        height: 45px;
        width: 45px;
    }

    #nova-sidebar .user .profile:hover {
        background-color: var(--hover-color);
    }

    #nova-sidebar .user .logout:hover {
        background-color: var(--hover-color);
    }

    #nova-sidebar .menu {
        width: 250px;
        height: calc(100svh - 180px);
        max-height: calc(100svh - 180px);
        overflow-x: hidden;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
        gap: 0.2rem;
    }

        #nova-sidebar .menu::-webkit-scrollbar {
            display: none;
        }

    #nova-sidebar .menu-item {
        width: 250px;
        cursor: pointer;
        color: inherit;
    }

        #nova-sidebar .menu-item i {
            font-size: 16pt;
        }

        #nova-sidebar .menu-item .module {
            width: 100%;
            height: 40px;
            display: flex;
            align-items: center;
            padding: 0 0.9rem;
            transition: all 0.3s ease-in-out;
        }

            #nova-sidebar .menu-item .module:hover {
                background-color: var(--hover-color);
            }

    .bxs-chevron-left {
        transition: all 0.3s ease-in-out;
    }

    .chevron-down {
        transform: rotate(-90deg);
    }

    .active-item {
        background-color: #f7f6fd !important;
        color: #5961a3 !important;
    }

    #nova-sidebar .menu-item .module .information {
        width: 100%;
        height: fit-content;
        display: flex;
        align-items: center;
        gap: 0.35rem;
    }

    #nova-sidebar .inner-menu {
        display: none;
    }

        #nova-sidebar .inner-menu .module {
            width: 100%;
            height: auto;
            min-height: 40px;
            display: flex;
            align-items: center;
            padding: 0 0 0 2.5rem;
            transition: all 0.3s ease-in-out;
        }

        #nova-sidebar .inner-menu i {
            font-size: 5pt;
        }

        #nova-sidebar .inner-menu .module .information span:before {
            content: "• ";
        }
</style>

