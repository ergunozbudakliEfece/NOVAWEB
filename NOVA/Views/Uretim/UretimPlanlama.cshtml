</div>
<button type="button" style="display:none" id="ambarButton" class="btn btn-outline-info" onclick="ambarGiris()">AMBAR GİRİŞ TETİKLE</button>
<script>
    var c = 0;
    hotkeys('ctrl+space', function (event, handler) {
        
        if (c == 0) {

            $('#ambarButton').show();
            c = 1;
        }
        else {

            $('#ambarButton').hide();
            c = 0;
        }
    });
 
  
 function ambarGiris() {
     ShowProgress()
     $.getJSON('http://192.168.2.13:83/api/uretim/AmGirisTablo', function (data) {
         console.log(data)
         $.ajax({
             url: '@Url.Action("AmbarGiris", "Uretim")',
             type: 'POST',
             data: { a: JSON.stringify(data) },
             error: function (data) {
                 alert(JSON.stringify(data));
                 HideProgress()
             },
             success: function (data) {
                 if (data == 'Başarılı') {
                     Swal.fire('Başarılı!', 'Kayıt başarılı', 'success');
                 } else {
                     Swal.fire('Başarısız!', data, 'error');
                 }
                 HideProgress()
             }
         })

     })

        }
        function ShowProgress() {
            document.body.style.overflow = 'hidden';
            document.activeElement.blur();
            $('#nova-overlay').fadeIn('fast').css('display', 'flex');
        }
        function HideProgress() {
            document.body.style.overflow = 'auto';
            $('#nova-overlay').fadeOut('slow');
        }
</script>


