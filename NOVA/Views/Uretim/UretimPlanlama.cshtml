@{
    Layout = "~/Views/Shared/_Layout_common.cshtml";
}


<head>
    <meta charset='utf-8' />
    <style>
        ::-webkit-scrollbar {
            width: 3px;
            height: 5px;
            background: #7f7f7f38;
        }

        ::-webkit-scrollbar-thumb {
            background: #7f7f7f;
            border-radius: 0.5rem;
        }
        .fc-daygrid-event {
            white-space: normal !important;
            cursor: pointer;
        }

        html, body {
            margin: 0;
            padding: 0 1rem 0 2.5rem !important;
            font-family: Arial, Helvetica Neue, Helvetica, sans-serif;
            font-size: 14px;
        }

        #calendar {
            width: 65vw;
            height: 95vh;
        }

        .fc-toolbar-chunk {
            margin-top: 5px;
            margin-bottom: 5px;
        }

        .heart {
            animation: heartbeat 1s infinite alternate;
        }

        @@keyframes heartbeat {
            from {
                opacity: 0.3;
                transform: scale(0.32);
            }

            to {
                opacity: 1;
                transform: scale(0.40);
            }
        }

        @@media screen and (max-width: 750px) {
            #calendar {
                width: 100% !important;
                min-height: 70vh !important;
                margin-bottom: 5px !important;
            }

            .fc-toolbar-ltr {
                display: flex;
                justify-content: center
            }
        }
    </style>
    
    <script src="~/wwwroot/libs/moment.js/moment-with-locales.js"></script>
    <script src="~/fullcalendar-scheduler-6.0.1/dist/index.global.js"></script>
    <script>
        var calendar = null
        var drag = null;
        var drag1 = null;
        var gerceklesentarih = null;
        var Planlar = [];
        var time;
        var inf;
        var ham, mam,isemri;
        function CreateCalendar() {
            var Calendar = FullCalendar.Calendar;
            var Draggable = FullCalendar.Draggable;

            var containerEl = document.getElementById('mydraggable');
            var calendarEl = document.getElementById('calendar');

            // initialize the external events
            // -----------------------------------------------------------------

            drag = new Draggable(containerEl, {
                itemSelector: '.fc-event',
                eventData: function (eventEl) {
                    var j_selector = jQuery(eventEl);
                    return {
                        id: j_selector.data('id'),
                        title: eventEl.innerText
                    };
                }
            });
            axios.get('http://192.168.2.209:83/api/seri/planlama').then((response) => {
                response.data.forEach((item) => {
                    Planlar.push({
                        id: item.ISEMRI,
                        title: item.ISEMRI,
                        start: item.TESLIM_TARIHI,
                        description: '',
                        inckey: '',
                        backgroundColor: ''
                    });
                })
                calendar = new Calendar(calendarEl, {
                    headerToolbar: {
                        left: 'prev,next today',
                        center: 'title',
                        right: 'dayGridMonth,timeGridWeek,timeGridDay,listMonth'
                    },
                    locale: "tr",
                    editable: true,
                    droppable: true, // this allows things to be dropped onto the calendar
                    eventTimeFormat: { // like '14:30:00'
                        hour: '2-digit',
                        minute: '2-digit',
                        meridiem: false
                    },
                    timeZone: 'UTC',
                    eventReceive: function (info) {
                        time = moment(new Date(info.event._instance.range.start)).add(-3, 'hours');
                        $('#HurdaModal').modal('show')
                        $('#DateLabel').html('<b>' + info.event.start.toLocaleDateString('TR') + '</b>')
                        ham = info.draggedEl.attributes[2].value;
                        mam = info.draggedEl.attributes[3].value;
                        tarih = time.locale('tr').format("YYYY-MM-DD");
                        isemri = info.event.title;
                    },
                    eventDrop: function (date) {

                        $('#HurdaModal').modal('show')

                        $('#DateLabel').html('<b>' + date.event.start.toLocaleDateString('TR') + '</b>')

                    },
                    eventClick: function (info) {


                        $('#HurdaModal').modal('show')
                        
                        time = moment(new Date(info.event._instance.range.start)).add(-3, 'hours');
                        $('#DateLabel').html('<b>' + time.locale('tr').format('LT') + '</b>')
                        $('#saat').val(time.locale('tr').format('LT'))
                        console.log()



                    },
                    eventResize: function (info) {
                        info.revert();
                    },
                    dateClick: function (info) {
                        calendar.changeView('timeGridDay', info.dateStr);
                    },
                    eventDidMount: function (info) {


                    },
                    buttonText: {
                        today: 'Bugün',
                        month: 'Ay',
                        week: 'Hafta',
                        day: 'Gün',
                        list: 'Liste',
                        listMonth: 'Aylık Liste',
                        listYear: 'Yıllık Liste',
                        listWeek: 'Haftalık Liste',
                        listDay: 'Günlük Liste'
                    },
                })



                calendar.render();
                calendar.addEventSource(Planlar);
            })



            // initialize the calendar
            // -----------------------------------------------------------------



        };
        $(document).ready(() => {
            var d;
            $.getJSON('http://192.168.2.209:83/api/seri/planlama', function (data) {
                d = data;
            }).done(function () {
                CreateCalendar();
                for (let i = 0; i < d.length; i++) {
                    $('#musteri2').append("<div class='fc-event fc-h-event fc-daygrid-event fc-daygrid-block-event mt-1 m1' data-id='1' data-ham='" + d[i].HAM_KODU + "' data-mam='" + d[i].MAMUL_KODU +"'><div class='fc-event-main text-center'>" + d[i].ISEMRI + "</div></div>")
                }
            })

            $('.fc-toolbar.fc-header-toolbar').addClass('row col-lg-12');
        });


    </script>
    <script src="https://unpkg.com/hotkeys-js/dist/hotkeys.min.js"></script>

</head>

<div id="nova-overlay" style="position: absolute; background: #00000080; left: 0; right: 0; bottom: 0; top: 0; z-index: 9999999;display:none;justify-content:center;align-items:center;">
    <div class="heart"><img id="progress" src="~/images/novasaydam.png" width="400" /></div>
</div>
<div style="display:flex;justify-content:center;align-items:start">

    <div id='mydraggable' style="width:350px">

        <div class="accordion mt-2">

            <div class="accordion-item active mt-1 mb-2" style="background-color:transparent">
                <h2 class="accordion-header " id="headingtwo1">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo1" aria-expanded="true" aria-controls="flush-collapseTwo1">
                        PLANLANACAKLAR
                    </button>
                </h2>
                <div id="flush-collapseTwo1" class="accordion-collapse collapse show" aria-labelledby="headingtwo1" data-bs-parent="#mydraggable">
                    <div id="musteri2" style="max-height:89vh;overflow-y:auto">
                        <input class="form-control position-sticky sticky-top" type="text" id="Search" onkeyup="myFunction()" placeholder="Ara..">
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="ms-3" id='calendar'></div>
    <div class="modal fade" id="HurdaModal" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="SiparisModalLabel" aria-hidden="true">

        <div class="modal-dialog modal-sm modal-dialog-scrollable" style="max-width: 20%;top:20vh">
            <div class="modal-content" style="max-height:45vh;">
                <div class="container-fluid mt-3">
                    <div class="centercontent" id="content7" style="display:unset">
                        <div class="heart"><img id="progress7" src="/images/novasaydam.png" style="max-width:15vw;display:none" /></div>
                    </div>
                    <div class="row text-center mt-1">
                        <div class="col">
                            <label class="modal-title" id="DateLabel" style="font-weight:bold"></label>
                        </div>
                    </div>
                    <div class="row mt-2">
                       
                        <div class="col" id="hurdamiktar2div">

                           
                                <input class="form-control text-center" placeholder="Saat" type="time" id="saat">
                            
                            

                        </div>
                    </div>


                    <div class="modal-footer mt-1" style="display:flex;justify-content:center;align-items:center;">
                        <button class="btn btn-primary" id="ModalSaveButton" type="button" onclick="KaliteKayit()">KAYDET</button>
                        <button class="btn btn-danger" type="button" onclick="ModalKapat()">KAPAT</button>
                    </div>
                </div>
            </div>
        </div>

    </div>


</div>
<button type="button" style="display:none" id="ambarButton" class="btn btn-outline-info" onclick="ambarGiris()">AMBAR GİRİŞ TETİKLE</button>
<script>
    var c = 0;
    hotkeys('ctrl+space', function (event, handler) {
        
        if (c == 0) {

            alert('Tebrikler!!')
            c = 1;
        }
        else {

            alert('VOOP!!')
            c = 0;
        }
    });
 
    function ModalKapat() {
        $('#HurdaModal').modal('hide')
        $('#saat').val(null)
    }
    function KaliteKayit() {
        $('#HurdaModal').modal('hide')
        var data = { ISEMRI:isemri,TARIH: tarih, SAAT: $('#saat').val(), HAM_KODU: ham, MAMUL_KODU: mam }
        axios.post('http://192.168.2.209:5207/api/seri/planlama/Update', data).then((response) => {
            alert(response.data)
        })
    }

        
        function ShowProgress() {
            document.body.style.overflow = 'hidden';
            document.activeElement.blur();
            $('#nova-overlay').fadeIn('fast').css('display', 'flex');
        }
        function HideProgress() {
            document.body.style.overflow = 'auto';
            $('#nova-overlay').fadeOut('slow');
    }
    function myFunction() {
        var input = document.getElementById("Search");
        var filter = input.value.toLowerCase().replace('ı', 'i');
        var nodes = document.getElementsByClassName('m1');

        for (i = 0; i < nodes.length; i++) {
            if (nodes[i].innerText.toLowerCase().includes(filter)) {
                nodes[i].style.display = "block";
            } else {
                nodes[i].style.display = "none";
            }
        }
    }
</script>


