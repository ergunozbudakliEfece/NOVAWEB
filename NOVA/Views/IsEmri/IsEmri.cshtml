    function TPTableCreatePivot(PivotVeri)
    {
        $("#TPPivot").pivot(PivotVeri,
            {
                rows: ["SIRA", "GIRDI2", "ISEMRINO", "STOKADI", "REF_ISEMRINO", "REF_STOKOLCUSU", "ADET", "AGIRLIK"]
            }, false, "tr");
    }
