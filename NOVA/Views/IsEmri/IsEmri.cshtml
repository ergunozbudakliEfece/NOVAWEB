        KaydetAktivite();
    }

    function ReferansStokSecimi()
    {
        KaydetAktivite();
    }

    //Stok değiştiğinde gerçekleşecek metot.
    function StokDegistir(Satir, Tip) {
        var SatirNo = Satir.parentNode.parentNode.rowIndex;

        switch (Tip) {
            case "TP":
                TPTableAgirlikHesabi(Satir);
                break;
        };

        CariGetir(Satir);
    }

    //Stok değiştirdikten sonra stok koduna göre müşterileri getiren metot.
    function CariGetir(Satir)
    {
        var rowNumber = Satir.parentNode.parentNode.rowIndex;

        var Cariler = @Html.Raw(Json.Encode(ViewBag.Cariler));
        var StokKodu = document.getElementById('TPTable').getElementsByTagName('tr')[rowNumber].getElementsByTagName('td')[2].getElementsByTagName('select')[0].value;

        var FiltreliCariler = Cariler.filter(x => x.STOK_KODU == StokKodu);

        var CariListe = `<option value="EFECE GALVANİZ" disabled selected>EFECE GALVANİZ</option>`;

        for (var i = 0; i < FiltreliCariler.length; i++) {
            CariListe += `<option value="${FiltreliCariler[i].CARI_ISIM}">${FiltreliCariler[i].CARI_ISIM}</option>`;
        }

        document.getElementById('TPTable').getElementsByTagName('tr')[rowNumber].getElementsByTagName('select')[4].innerHTML = CariListe;
    }

    //String olarak gelen veriyi, html element olarak geriye döner.
    function StringToHtml(str) {
        var dom = document.createElement('div');
        dom.innerHTML = str;
        return dom;
    };

    //Kaydet buton aktif/pasif durumunu yöneten metot.
    function KaydetAktivite()
    {
        var Tip = $('input[name="uretim-tip"]:checked').val();

        switch (Tip)
        {
            case "TP":
                TPKaydetAktivite();
                break;
        };
    }

    function TPKaydetAktivite()
    {
        var Satirlar = document.getElementById('TPTable').getElementsByTagName('tr');

        var Makine, Stok, Miktar, Adet, RefMakine, RefStok;
        var AlanlarDolu = true;

        for (var i = 1; i < Satirlar.length; i++)
        {
            Makine = document.getElementById('TPTable').getElementsByTagName('tr')[i].getElementsByTagName('td')[1].getElementsByTagName('select')[0].value == "MAKİNE SEÇİN" ? false : true;
            Stok = document.getElementById('TPTable').getElementsByTagName('tr')[i].getElementsByTagName('td')[2].getElementsByTagName('select')[0].value == "STOK SEÇİN" ? false : true;
            Miktar = document.getElementById('TPTable').getElementsByTagName('tr')[i].getElementsByTagName('td')[3].getElementsByTagName('input')[0].value.trim().length < 1 ? false : true;
            Adet = document.getElementById('TPTable').getElementsByTagName('tr')[i].getElementsByTagName('td')[4].getElementsByTagName('input')[0].value.trim().length < 1 ? false : true;

            var IlkKosul = Makine && Stok && Miktar && Adet;

            RefMakine = document.getElementById('TPTable').getElementsByTagName('tr')[i].getElementsByTagName('td')[6].getElementsByTagName('select')[0].value == "MAKİNE SEÇİN" ? false : true;
            RefStok = document.getElementById('TPTable').getElementsByTagName('tr')[i].getElementsByTagName('td')[7].getElementsByTagName('select')[0].value == "STOK SEÇİN" ? false : true;

            var IkinciKosul = (RefMakine && !RefStok) || (!RefMakine && RefStok);

            if (!IlkKosul) {
                AlanlarDolu = false;
                break;
            }
            else {
                if (IkinciKosul)
                {
                    AlanlarDolu = false;
                    break;
                }
            }
        }

        $('#kaydet').prop('disabled', !AlanlarDolu);
    }
